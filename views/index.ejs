<%- include header %>
<% posts.forEach(function (post, index) { %>
<div class="post_item">
    <div>
        <div><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></div>
        <a class="hide" href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a>
    </div>
    <div class="info">
        作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 日期：<%= post.time.minute %> | 
        品牌：<a class="tag" href="/tags/<%= post.cate %>"><%= post.cate %></a>
    </div>
    <div class="post_cont"><%- post.post %></div>

    <div class="info">阅读：<%= post.pv %> </div>
</div>
<% }) %>

<%- include paging %>
<%- include footer %>
