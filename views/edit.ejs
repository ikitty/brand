<%- include header %>
<form method="post" class="form-horizontal" >
    <div class="form-group">
        <label for="iptTit" class="form_key ">标题</label>
        <div class="form_val">
            <input type="text" name="title" value=<%= post.title %> class="form-control" id="iptTit" placeholder="" />
        </div>
    </div>
    <div class="form-group">
        <label class="form_key">品牌</label>
        <div class="form_val">
            <select class="form-control" value=<%= post.cate %> name="cate">
                <option>aaa</option>
                <option>bbb</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="form_key">内容</label>
        <div class="form_val">
            <textarea class="form-control" id="postContent" name="post" rows="20" cols="100"><%- post.post %></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="form_key">&nbsp;  </label>
        <div class="form_val">
            <button type="submit" class="btn btn-success">提交</button>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(function(){
        var editor = new wangEditor('postContent');
        var disMenus = ['strikethrough', 'bgcolor', 'emotion', 'video', 'location', 'redo', 'fullscreen']
        editor.config.menus = editor.config.menus.filter((k) => disMenus.indexOf(k) === -1 )
        
        editor.create();
    })
</script>

<%- include footer %>
